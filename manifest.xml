<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp 
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">
  
  <Id>2792d8c9-0570-4a03-a3f1-1e432f987dc1</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Contoso</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="OutlookAutoMailer"/>
  <Description DefaultValue="Add-in pour envoi individuel via Graph API"/>
  <IconUrl DefaultValue="https://noah-f05.github.io/Outlook-Automailer/assets/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://noah-f05.github.io/Outlook-Automailer/assets/icon-128.png"/>
  <SupportUrl DefaultValue="https://www.contoso.com/help"/>

  <AppDomains>
    <AppDomain>https://noah-f05.github.io/Outlook-Automailer</AppDomain>
    <AppDomain>https://graph.microsoft.com</AppDomain>
  </AppDomains>


  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.3">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://noah-f05.github.io/Outlook-Automailer/taskpane.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://noah-f05.github.io/Outlook-Automailer/taskpane.html"/>
      </DesktopSettings>
    </Form>
  </FormSettings> 

  <Permissions>ReadWriteItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Taskpane.Url"/>
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgComposeGroup">
                <Label resid="GroupLabel"/>
                <Control xsi:type="Button" id="SendIndividuallyCompose">
                  <Label resid="SendIndividually.Label"/>
                  <Supertip>
                    <Title resid="SendIndividually.Title"/>
                    <Description resid="SendIndividually.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>run</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://noah-f05.github.io/Outlook-Automailer/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://noah-f05.github.io/Outlook-Automailer/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://noah-f05.github.io/Outlook-Automailer/assets/icon-80.png"/>
      </bt:Images>

      <bt:Urls>
        <bt:Url id="Auth.Url" DefaultValue="https://noah-f05.github.io/Outlook-Automailer/auth.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://noah-f05.github.io/Outlook-Automailer/taskpane.html"/>
      </bt:Urls>
  
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Outils Auto-Mail"/>
        <bt:String id="SendIndividually.Label" DefaultValue="Envoi individuel"/>
        <bt:String id="SendIndividually.Title" DefaultValue="Envoyer un mail par destinataire"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="SendIndividually.Tooltip" DefaultValue="Cliquez pour envoyer le message à chaque destinataire séparément via Graph API"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
